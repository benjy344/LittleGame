<div class="log-in log">
	<h2>Se Connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, label: 'Se souvenir de moi',  as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div><!--



--><div class="sign-up log">
	<h2>Créer un compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :username, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: 'Confirmer le mot de passe', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Créer un compte" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
