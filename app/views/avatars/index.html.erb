<p id="notice"><%= notice %></p>

<h1>Avatars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Element</th>
      <th>Hp</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @avatars.each do |avatar| %>
      <tr>
        <td><%= avatar.name %></td>
        <td><%= avatar.element %></td>
        <td><%= avatar.hp %></td>
        <td><%= link_to 'Show', avatar %></td>
        <td><%= link_to 'Edit', edit_avatar_path(avatar) %></td>
        <td><%= link_to 'Destroy', avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

