$('.render-avatar').html("<%= j render(:partial => 'avatars/avatar' , locals: {avatar: @avatar}) %>");
$avatarController = $('.js-avatar-controller');
var nextLevel = $('.js-avatar-exp').attr('data-next-level');
var currentExp = $('.js-avatar-current-exp').attr('data-exp');
var currenthp = $('.js-avatar-current-hp').attr('data-hp');
var maxHp = $('.js-avatar-hp').attr('data-hpmax');
$avatarController.find('.js-avatar-current-hp').css('width', calculPercentLife(currenthp, maxHp));
