<% @objets = Objet.all %>
<%= simple_form_for(@quete) do |f| %>
  	<%= f.error_notification %>

  	<div class="form-inputs">
	    <%= f.input :title, label:'Titre', class: 'form-control' %>
	    <%= f.input :description, label:'Description', class: 'form-control' %>
	    <%= f.input :unlockLevel, label:'Se débloque aprés le donjon de niveau ', class: 'form-control' %>
	    <%# f.input :objetToFind, label:'L\'objet à trouver', class: 'form-control' %>
	    <%= f.input :objetToFind, collection: @objets, as: :grouped_select, group_method: :id, group_label_method: :name, label_method: :title %>
	    
	    
	  </div>

  	<div class="form-actions">
    	<%= f.button :submit %>
  	</div>



<% end %>
