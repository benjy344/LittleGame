<h1>Donjons</h1>



<div id="avatar" data-hp="<%= @avatar.hp %>" data-maxHp="<%= @avatar.MaxHealth %>" data-element="<%= @avatar.element %>" data-job="<%= @avatar.job.name %>" data-exp="<%= @avatar.exp %>" data-level="<%= @avatar.level %>" data-force="<%= @avatar.force %>" data-inteligence="<%= @avatar.inteligence %>" data-agility="<%= @avatar.agility %>">
  <div class="frame1"></div>
  <div class="frame2"></div>
  <div class="frame3"></div>
  <div class="frame4"></div>
  <div class="frame5"></div>
</div>

<div id="bag">
  <div class="open-button js-open-button"></div>
  <div class="close-button js-close-button"></div>
  <div class="js-objects inventaire">
    <%= render partial: 'objets/objets_list' , locals: {objets: @avatar.objets}%>
  </div><!--
  --><div class="js-craft-buttons craft-buttons">
    <%= render partial: 'avatars/craft' , locals: {avatar: @avatar}%>
  </div>
  
</div>





<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @avatar.name %></td>
        <td><%# defined?@avatar.objets.first.name %></td>

        <% @objets.each do |o| %>
          <% @title = 'Ajouter '+o.name%>
          <td><%= link_to @title, {controller: "avatars", action: "addObjetById", avatar_id: @avatar.id, objet_id: o.id, donjon_id: @donjon.id }, class: "js-add-object btn", remote: true %></td>
          
        <% end %>
        
      </tr>
  </tbody>
</table>












