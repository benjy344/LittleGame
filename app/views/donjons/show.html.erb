    <div class="room js-room intro-room js-room-<%= @donjon.rooms.count + 1 %>">
      <p>Il y a une lumière au bout ...</p>
      <%= link_to 'Sortir', {controller: "avatars", action: "finishDonjon", donjon_id: @donjon.id }, class: " btn btn--white" %>
