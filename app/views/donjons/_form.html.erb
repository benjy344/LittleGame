<%= simple_form_for(@donjon) do |f| %>
  	<%= f.error_notification %>

  	<div class="form-inputs">
	    <%= f.input :name, label:'Nom', class: 'form-control' %>
      <%= f.input :level, label:'Débloque après le donjon : ', class: 'form-control' %>
	</div>

  <% if context === 'edit' %>
	<div><p>
    <%= link_to 'Modifier les étages', donjon_rooms_path(@donjon.id), class: 'btn btn--white'%>
  </p></div>
  <% end %>
  	<div class="form-actions">
    	<%= f.button :submit %>
  	</div>




<% end %>
