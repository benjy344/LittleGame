<p id="notice"><%= notice %></p>

<% def addObject(a, ob)
  @avatar = Avatar.find(a)
  @objet = Objet.find(ob)

  @avatar.objets << @objet
 end %>


<h1>Donjons</h1>

<h2>avatar</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>agility</th>
      <th>force</th>
      <th>intelgence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avatars.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.objets.first.name %></td>

        <% @objets.each do |o| %>
          <% @title = 'Ajouter '+o.name%>
          <%= link_to @title, {controller: "avatars", action: "addObjetById", avatar_id: a.id, objet_id: o.id }, method: 'get' %>
          
        <% end %>
      </tr>
    <% end %>

    <% @objets.each do |o| %>
      <tr>
        <td><%= o.name %></td>
      </tr>
    <% end %>

    <% @bags.each do |b| %>
      <tr>
        <td>objet <%= @objets.find(b.objet_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>



