$rewardObj 	= 0;
$rewardOr 	= 0;
$(document).ready(function(){

	$selectType = $('.js-select-quest-type');
	

	if ($selectType.length) {
		$val = $selectType.find('option:selected').text();
		$rewardObj 	= $('.js-objet');
		$rewardOr 	= $('.js-money');
		console.log($rewardObj,$rewardOr )
		$selectType.on('change', function(e){
			$val = $(e.currentTarget).find('option:selected').text();
			hiddenForm($val);
		})
	}

})

function hiddenForm(val) {
	
	$reward 	= $('.js-reward');


	if (val === 'Or') {
		$rewardObj.remove();
		$reward.html($rewardOr);
		//$rewardOr.css('display', 'block').attr('hidden', false);
	} else {
		console.log($rewardObj)
		$rewardOr.remove();
		$reward.html($rewardObj);
		$rewardObj.css('visibility', 'visible').attr('hidden', false);
		//$rewardObj.css('display', 'block').attr('hidden', false);
		//$rewardOr.css('display', 'none').attr('hidden', true);
	}
}