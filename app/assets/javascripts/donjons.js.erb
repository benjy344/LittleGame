		if (avatar.agility >= monster.agility) {
			//si l'avatar est le plus rapide 
			//attaque le monstre
			monster.hp = (monster.hp - force);
			if (monster.hp <= 0) { 
				//si le montre est KO => avatar WIN
				monster.hp = 0;
				renderMonster();
				win = true;
			} else {
