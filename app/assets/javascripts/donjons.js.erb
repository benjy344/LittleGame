function verfifButton(count) {

	
	$room = $('.js-room-'+count);
	var $resultFindObjects;
	var $explorer;

	$room.find('.js-result-find-objects').length != 0 ?  $resultFindObjects = $room.find('.js-result-find-objects') : $resultFindObjects = "";
